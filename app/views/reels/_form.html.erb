<div>
<%= form_with(model: @reel, data: {turbo: false}) do |f| %>
  <fieldset>
    <%= f.label :item_name, class: 'ms-1 row mt-1' %>
    <%= f.text_field :item_name, class: "col-sm-2" %>
  </fieldset>
  <fieldset >
    <%= f.label :size, class: 'ms-1 row mt-1'%>
    <%= f.text_field :size, class: "col-sm-2" %>
  </fieldset>
  <fieldset>
    <%= f.label :description, class: 'ms-1 row mt-1' %>
    <%= f.text_field :description, class: "col-sm-2"  %>
  </fieldset>
  <fieldset>
    <%= f.label :price, class: 'ms-1 row mt-1' %>
    <%= f.text_field :price, class: "col-sm-2"  %>
  </fieldset>
  <fieldset>
    <%= f.label :item_condition, class: 'ms-1 row mt-1' %>
    <%= f.text_field :item_condition, class: "col-sm-2"  %>
  </fieldset>
  <fieldset>
    <%= f.label :brand_id, class: 'ms-1 row mt-1' %>
    <%= f.collection_select :brand_id, @brands, :id, :brand  %>
  </fieldset>
  <fieldset>
    <%= f.label :reel_type_id, class: 'ms-1 row mt-1' %>
    <%= f.collection_select :reel_type_id, @reel_types, :id, :reel_type  %>
  </fieldset>
  <fieldset>

  </fieldset>
  <fieldset>
    <%= f.label :reel_pic, class: 'ms-1 row mt-1' %>
    <%= f.file_field :reel_pic %>
  </fieldset>
  <fieldset>
    <%= f.submit class: "mt-2 col-sm-2"%>
  </fieldset>
<% end %>
</div>