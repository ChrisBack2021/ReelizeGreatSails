<h1>New Reel</h1>

<%= form_with(model: @reel) do |f| %>
  <fieldset>
    <%= f.label :item_name %>
    <%= f.text_field :item_name %>
  </fieldset>
  <fieldset>
    <%= f.label :size %>
    <%= f.text_field :size %>
  </fieldset>
  <fieldset>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </fieldset>
  <fieldset>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </fieldset>
  <fieldset>
    <%= f.label :item_condition %>
    <%= f.text_field :item_condition %>
  </fieldset>
  <fieldset>
    <%= f.label :brand_id %>
    <%= f.collection_select :brand_id, @brands, :id, :brand  %>
  </fieldset>
  <fieldset>
    <%= f.label :reel_type_id %>
    <%= f.collection_select :reel_type_id, @reel_types, :id, :reel_type  %>
  </fieldset>
  <fieldset>
    <%= f.submit %>
  </fieldset>
<% end %>