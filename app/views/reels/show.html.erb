<h1>
  <%= @reel.brand.brand %>
  <%= @reel.item_name %>
</h1>

<%= cl_image_tag @reel.reel_pic.key, crop: :scale, width: 150, cloud_name: ENV['CLOUDINARY_CLOUD_NAME'] %>

<h2> 
  <ul>Reel type: <%= @reel.reel_type.reel_type %></ul>
  <ul>Size: <%= @reel.size %></ul>
  <ul>Price: <%= number_to_currency @reel.price %></ul>
  <ul>Description: <%= @reel.description %></ul>
  <ul>Item condition: <%= @reel.item_condition %></ul>
  <ul>Reel type: <%= @reel.reel_type.reel_type %></ul>
</h2>



<%# Button bar for action buttons. %>
<div class="btn-toolbar ">
<% if user_signed_in? %>
<%# Edit link, only if reel policy update action allows %>
<%= link_to 'Edit', edit_reel_path(@reel), class: 'btn btn-warning me-2' if policy(@reel).update? %>
<%= button_to('Delete', @reel, method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete ' #{@reel.brand.brand} #{@reel.item_name}' ?" } }, class: 'btn btn-danger me-2') if policy(@reel).destroy? %>
<% end %>
<%= link_to 'Back to catalogue', reels_path, class: 'btn btn-primary' %>

<%# Below is for Stripe %>

<button data-stripe="payment", class= 'btn btn-success ms-2'>Buy Now for <%= number_to_currency(@reel.price) %></button>


<script src="https://js.stripe.com/v3/"></script>

<script>
    document.querySelector("[data-stripe='payment']").addEventListener("click", () =>{ const stripe = Stripe("<%= ENV['STRIPE_PUBLIC_KEY'] %>");
    stripe.redirectToCheckout({
      sessionId: "<%= @session_id %>"
    });
    })
</script>
</div>