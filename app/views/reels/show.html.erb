<h1>
  <%= @reel.brand.brand %>
  <%= @reel.item_name %>
</h1>

<%= cl_image_tag @reel.reel_pic.key, crop: :scale, width: 150, cloud_name: 'dm2ebszpf' %>

<h2> 
  <ul>Reel type: <%= @reel.reel_type.reel_type %></ul>
  <ul>Size: <%= @reel.size %></ul>
  <ul>Price: <%= number_to_currency @reel.price %></ul>
  <ul>Description: <%= @reel.description %></ul>
  <ul>Item condition: <%= @reel.item_condition %></ul>
  <ul>Reel type: <%= @reel.reel_type.reel_type %></ul>
</h2>

<%= button_to 'Buy now', checkout_create_path, method: :post, params: {id: @reel.id}, remote: true %>



<div class="btn-toolbar ">
<% if user_signed_in? %>
<%# Edit link, only if reel policy update action allows %>
<%= link_to 'Edit', edit_reel_path(@reel), class: 'btn btn-warning me-2' if policy(@reel).update? %>
<%= button_to('Delete', @book, method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete ' #{@reel.brand.brand} #{@reel.item_name}' ?" } }, class: 'btn btn-danger me-2') if policy(@reel).destroy? %>
<% end %>
<%= link_to 'Back to catalogue', reels_path, class: 'btn btn-primary' %>
</div>